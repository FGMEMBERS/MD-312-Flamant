  <animation>
    <type>rotate</type>
    <object-name>HDGrose</object-name>
    <property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>HDGcm</object-name>
    <property>/instrumentation/altimeter/setting-inhg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
