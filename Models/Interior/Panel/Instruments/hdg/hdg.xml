<PropertyList>
  
  <path>hdg.ac</path>
  
  <animation>
    <object-name>HDG</object-name>
    <object-name>HDGadjust</object-name>
    <object-name>HDGbckgnd</object-name>
    <object-name>HDGcm</object-name>
    <object-name>HDGneedle</object-name>
    <object-name>HDGneedle2</object-name>
    <object-name>HDGrose</object-name>
    
    <object-name>HDGglass</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Br-761/Models/Effects/Glass/glass</inherits-from>
    <object-name>HDGglass</object-name>
  </effect>
  
  <!-- Istr. Light effect -->
  <animation>
    <type>material</type>
    <object-name>HDGadjust</object-name>
    <object-name>HDGbckgnd</object-name>
    <object-name>HDGcm</object-name>
    <object-name>HDGneedle</object-name>
    <object-name>HDGneedle2</object-name>
    <object-name>HDGrose</object-name>    
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
