<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>oiltemp.ac</path>

  <animation>
    <!-- Objects Opaques -->
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    
    <!-- Objects Transparents -->
    <object-name>vitre</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/MD-312-Flamant/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <animation> 
    <type>rotate</type>
    <object-name>ptrL</object-name>   
    <property>engines/engine[0]/oil-temperature-degc</property>
    <interpolation>
      <entry><ind> -50 </ind><dep>   0.0 </dep></entry>
      <entry><ind>   0 </ind><dep>  26.5 </dep></entry>
      <entry><ind>  50 </ind><dep>  56.8 </dep></entry>
      <entry><ind> 100 </ind><dep>  89.2 </dep></entry>
      <entry><ind> 150 </ind><dep> 114.0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m> -0.03025 </y-m>
      <z-m>  0.00421 </z-m>  
    </center>
    <axis> 
      <x>  1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>ptrR</object-name>
    <property>engines/engine[1]/oil-temperature-degc</property>
    <interpolation>
      <entry><ind> -50 </ind><dep>   0.0 </dep></entry>
      <entry><ind>   0 </ind><dep>  26.5 </dep></entry>
      <entry><ind>  50 </ind><dep>  56.8 </dep></entry>
      <entry><ind> 100 </ind><dep>  89.2 </dep></entry>
      <entry><ind> 150 </ind><dep> 114.0 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.00000 </x-m>
      <y-m> 0.03016 </y-m>
      <z-m> 0.00442 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
